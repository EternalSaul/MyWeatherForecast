        android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/WeatherIndexText7"
    android:layout_columnWeight="0.2"
    android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/WeatherIndexText8"
    android:layout_columnWeight="0.2"
    android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/WeatherIndexText10"
    android:layout_columnWeight="0.2"
    android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/WeatherIndexText9"
    android:layout_columnWeight="0.2"
    android:gravity="center" />


</GridLayout>